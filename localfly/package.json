{
    "name": "localfly",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "build:dev": "bun build --target=bun --outdir=dist src/index.ts",
        "build": "bun run build  --production --bytecode",
        "compile": "bun build --target=bun --compile --outfile=dist/localfly --production ./src/server.ts",
        "dev": "bun run --watch --no-clear-screen src/server.ts",
        "start": "bun run src/server.ts",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "lint": "eslint src/**/*.ts --ignore-pattern src/**/*.test.ts",
        "test": "bun test",
        "generate": "bunx openapi-typescript https://docs.machines.dev/spec/openapi3.json -o types/apis/machines.dev.d.ts --root-types",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bun run scripts/migrate.ts"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "dockerode": "^4.0.7",
        "drizzle-orm": "^0.44.2",
        "hono": "^4.8.3",
        "pino": "^9.7.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/bun": "latest",
        "@types/dockerode": "^3.3.41",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.29.0",
        "openapi-typescript": "^7.8.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.35.0"
    }
}
