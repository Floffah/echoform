{
    "name": "echoform-authoritative",
    "version": "0.0.1",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "bun build --target=bun --outdir=dist src/index.ts --production --bytecode",
        "dev": "NODE_ENV=development bun run --watch --no-clear-screen .",
        "dev:prepare": "bun run db:migrate && bun run dev:seed",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "lint": "eslint src/**/*.ts --ignore-pattern src/**/*.test.ts",
        "deps": "ncu --target semver",
        "test": "bun test",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bun run scripts/migrate.ts",
        "db:seed": "bun run scripts/seed.ts",
        "codegen:asyncapi": "bun run scripts/asyncapi.ts",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "dependencies": {
        "@hono/standard-validator": "^0.1.5",
        "@hono/zod-validator": "^0.7.4",
        "@neondatabase/serverless": "^1.0.2",
        "@node-rs/bcrypt": "^1.10.7",
        "@scalar/hono-api-reference": "^0.9.22",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.7",
        "hono": "^4.10.2",
        "hono-openapi": "^1.1.0",
        "nanoid": "^5.1.6",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "zod": "^4.1.12",
        "zod-openapi": "^5.4.3"
    },
    "devDependencies": {
        "@asyncapi/cli": "^4.0.0",
        "@asyncapi/optimizer": "^1.0.4",
        "@eslint/js": "^9.38.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@tsconfig/bun": "^1.0.9",
        "@types/bun": "^1.3.1",
        "bonjour-service": "^1.3.0",
        "chalk": "^5.6.2",
        "chalk-template": "^1.1.2",
        "drizzle-kit": "^0.31.5",
        "eslint": "^9.38.0",
        "mermaid": "^11.12.0",
        "npm-check-updates": "^19.1.1",
        "prettier": "^3.6.2",
        "typed-emitter": "^2.1.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2",
        "vitepress": "^1.6.4",
        "vitepress-plugin-mermaid": "^2.0.17",
        "zod-to-json-schema": "^3.24.6"
    },
    "packageManager": "bun@1.3.1"
}
